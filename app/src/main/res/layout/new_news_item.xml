<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_margin="@dimen/card_margin"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation">

        <TextView

            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/news_title_height"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:textAppearance="?android:textAppearanceLarge"
            tool:text="the world as it is today." />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="@dimen/padding">

            <TextView
                android:id="@+id/news_author"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/news_sub_text_height"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="@dimen/padding"
                tool:text="Koliko" />

            <TextView
                android:id="@+id/new_category"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/news_sub_text_height"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_toRightOf="@+id/news_author"
                android:gravity="center"
                android:padding="@dimen/padding"
                tool:text="Politics" />

            <TextView
                android:id="@+id/news_date"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/news_sub_text_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|right"
                android:gravity="center"
                android:padding="@dimen/padding"
                tool:text="2018-06-20 10:50:03" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>